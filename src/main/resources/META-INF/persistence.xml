<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="managmentPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.mycompany.gestion_alumnos.LOGICA.Aula</class>
    <class>com.mycompany.gestion_alumnos.LOGICA.Curso</class>
    <class>com.mycompany.gestion_alumnos.LOGICA.Estudiante</class>
    <class>com.mycompany.gestion_alumnos.LOGICA.Materia</class>
    <class>com.mycompany.gestion_alumnos.LOGICA.Matricula</class>
    <class>com.mycompany.gestion_alumnos.LOGICA.PagoColegiatura</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}?serverTimeZone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driv"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>






 